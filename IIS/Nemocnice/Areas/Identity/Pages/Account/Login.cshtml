@page
@model LoginModel

@{
    ViewData["Title"] = "Přihlášení";
}

<h1 style="text-align:center; padding-top:150px;">@ViewData["Title"]</h1>
<div class="row" style="justify-content:center;">
    <div class="col-md-4" >
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Login/Rodné číslo<a style="color:red">*</a></label>
                    <input  asp-for="Input.UserName" placeholder="xlogin00/XXXXXXX" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Heslo<a style="color:red">*</a></label>
                    <input required asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button style="float:right;" type="submit" class="btn btn-primary">Log in</button>
                </div>

            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
